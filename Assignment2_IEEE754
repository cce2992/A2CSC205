
import javax.swing.JApplet;
import javax.swing.SwingUtilities;
import javax.swing.JFrame;
import javax.swing.JTabbedPane;
public class Assignment2_IEEE754 extends JApplet{

private JFrame frame;
public Assignment2_IEEE754(){

}
public JTabbedPane makeMainPanel(){
	JTabbedPane framePanel = new JTabbedPane();
	framePanel.addTab("32 Bit Single", (PanelerConverter.build(false)).getPanel());
	framePanel.addTab("64 Bit Doubles",(PanelerConverter.build(false)).getPanel());

	return framePanel;
}

private  void makeFrame(boolean createFrameForPanel)



{
	frame =new JFrame("NOVA - CSC205- Assignment2 -IEEE754");
	if(createFrameForPanel)
	{
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setBounds(500,500,900,500);
		frame.add(new Assignment2_IEEE754().makeMainPanel());

		frame.setVisible(true);
		frame.validate();

	}
}
public void init(){
	makeFrame(false);
}


public void startJApplet()
{makeFrame(true);}

}
